from kivy.app import App
from kivy.uix.label import Label
from kivy.uix.gridlayout import GridLayout
from kivy.uix.textinput import TextInput
from kivy.uix.button import Button
from kivy.uix.boxlayout import BoxLayout
from kivy.uix.floatlayout import FloatLayout
from kivy.uix.anchorlayout import AnchorLayout
from kivy.uix.tabbedpanel import TabbedPanel
from kivy.lang import Builder
from kivy.core.window import Window



class Gui(App):
    def build(self, **kwargs):
        root = FloatLayout()

        header = AnchorLayout(anchor_x='left', anchor_y='top')
        header_line = BoxLayout(orientation='horizontal', spacing=5)
        btn1 = Button(text='File', size=(60, 20), size_hint=(None, None), pos_hint={'top': 1})
        btn2 = Button(text='Edit', size=(60, 20), size_hint=(None, None), pos_hint={'top': 1})
        btn3 = Button(text='Help', size=(60, 20), size_hint=(None, None), pos_hint={'top': 1}, background_color=(.05, 0, 0, 0))
        header_line.add_widget(btn1)
        header_line.add_widget(btn2)
        header_line.add_widget(btn3)
        header.add_widget(header_line)

        watchlist = AnchorLayout(anchor_x='left', anchor_y='top')
        watchlist_line = BoxLayout(orientation='vertical', spacing=5, size_hint=(.1, .2))
        wl1 = Button(text='FirstWatchlist', size=(150, 20), size_hint=(None, None), pos_hint={'top': 0})
        wl2 = Button(text='SecondWatchlist', size=(150, 20), size_hint=(None, None))
        watchlist_line.add_widget(wl1)
        watchlist_line.add_widget(wl2)
        watchlist.add_widget(watchlist_line)

        root.add_widget(watchlist)
        root.add_widget(header)
        print(watchlist_line.size)
        return root

if __name__ == '__main__':
    Gui().run()